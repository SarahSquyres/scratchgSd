<div class="jumbotron big-banner" style="height: 100%">
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #000000; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                {{!-- avatar not appearing --}}
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 150px; z-index: 1">
                                <button type="radio" class="btn btn-secondary btn-sm" data-mdb-ripple-color="dark"
                                    style="z-index: 1;">
                                    Update picture
                                </button>
                            </div>

                            <div class="ms-3" style="margin-top: 130px;">
                                <h5>{{ user.username }}</h5>
                            </div>
                        </div>
                        <div class="p-4 text-black" style="background-color: #f8f9fa;">
                        </div>
                        <div class="card-body p-4 text-black">
                            <div class="mb-5">
                                <p class="lead fw-normal mb-1">About</p>
                                <div class="p-4" style="background-color: #f8f9fa;">
                                    <p id="userBio" class="text-break">User bio</p>
                                    {{user.bio}}
                                </div>
                            </div>
                            <div class="container-fluid">
                                <h3>Create a New Task</h3>

                                <form class="form new-task-form">
                                    <div class="form-group">
                                        <label for="task-name">Task Description:</label>
                                        <input class="form-input" type="text" id="task-name" name="task-name" />
                                    </div>
                                    <div class="form-group">
                                        <button type="input" id="save-list"
                                            class="btn btn-secondary btn-sm">Create</button>
                                    </div>
                                </form>
                            </div>
                            <table class="table table-striped table-sm table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Task</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    <tr id="list-container">
                                        <th scope="row"><input class="todo__checkbox" type="checkbox"></th>
                                        <td class="text-break"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>
</div>
<script src="./js/userprofile.js"></script>